<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <template id="odoo_accessibility"
            inherit_id="website.layout"
            name="Accessibility Widget">

    <xpath expr="//header" position="after">

      <!-- Set EU flag -->
      <t t-set="no_required_eu" t-value="request.env['ir.config_parameter'].sudo().get_param('odoo_allinoneaccessibility.no_required_eu', '1')"/>

      <!-- AIOA -->
      <t t-if="no_required_eu == '1'">
        <script id="aioa-adawidget" 
              t-attf-src="https://www.skynettechnologies.com/accessibility/js/all-in-one-accessibility-js-widget-minify.js?colorcode={}&amp;token={}&amp;t={}&amp;position={}.{}.{}.{}">
        </script>
      </t>

      <!-- EU -->
      <t t-if="no_required_eu == '0'">
        <script id="aioa-adawidget" 
              t-attf-src="https://eu.skynettechnologies.com/accessibility/js/all-in-one-accessibility-js-widget-minify.js?">
        </script>
      </t>

    </xpath>
  </template>
</odoo>
