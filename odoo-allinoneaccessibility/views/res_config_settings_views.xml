<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="res_config_settings_view_all_in_one_accessibility" model="ir.ui.view">
            <field name="name">res.config.settings.form.inherit</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">

                <xpath expr="//div[@id='companies']" position="after">

                    <!-- ======================= CUSTOM CSS ======================= -->

                    <!-- ======================= MAIN SETTINGS PANEL ======================= -->
                    <div>
                        <h2>All in One Accessibility Setting</h2>
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-12 o_setting_box">
                                <div class="o_setting_left_pane"/>
                                <div class="o_setting_right_pane">
                                    <div class="content-group">
                                        <form>

                                            <!-- Color Code -->
                                            <div class="row mt16">
                                                <label string="Hex color code" for="aioa_color_code" class="col-lg-3 o_light_label fw-bold"/>
                                                <field name="aioa_color_code"/>
                                                <span class='validate_pro'>
                                                    <p>You can customize the ADA Widget color. For example: #FF5733</p>
                                                </span>
                                            </div>

                                            <!-- Precise Position -->
                                            <div class="row mt16">
                                                <label for="aioa_precise_position" class="col-lg-3 o_form_label">
                                                    Enable Precise accessibility widget icon position
                                                </label>
                                                <div class="col-lg-9">
                                                    <field name="aioa_precise_position"/>
                                                </div>
                                            </div>

                                            <!-- Right Offset -->
                                            <div class="row mt16" invisible="not aioa_precise_position">
                                                <label for="aioa_offset_right" class="col-lg-3 o_form_label">Right offset (PX)</label>
                                                <div class="col-lg-3">
                                                    <field name="aioa_offset_right"/>
                                                    <p class="text-muted">0 - 250px are permitted values</p>
                                                </div>
                                                <label for="aioa_offset_right_dir" class="col-lg-3 o_form_label">To the left</label>
                                                <div class="col-lg-3">
                                                    <field name="aioa_offset_right_dir"/>
                                                </div>
                                            </div>

                                            <!-- Bottom Offset -->
                                            <div class="row mt16" invisible="not aioa_precise_position">
                                                <label for="aioa_offset_bottom" class="col-lg-3 o_form_label">Bottom offset (PX)</label>
                                                <div class="col-lg-3">
                                                    <field name="aioa_offset_bottom"/>
                                                    <p class="text-muted">0 - 250px are permitted values</p>
                                                </div>
                                                <label for="aioa_offset_bottom_dir" class="col-lg-3 o_form_label">To the bottom</label>
                                                <div class="col-lg-3">
                                                    <field name="aioa_offset_bottom_dir"/>
                                                </div>
                                            </div>

                                            <!-- Placement -->
                                            <div class="row mt16" invisible="aioa_precise_position">
                                                <label for="style" class="col-lg-3 o_form_label fw-bold">Position of the accessibility icon</label>
                                                <field name="style"/>
                                            </div>
                                            
                                            <!-- Widget Size -->
                                            <div class="row mt16">
                                                <label string="Widget Size" for="aioa_size" class="col-lg-3 o_light_label fw-bold"/>
                                                <field name="aioa_size" eval="True"/>
                                            </div>

                                            <!-- ================= ICON TYPE SECTION ================= -->
                                            <div class="row mt16 aioa_icon_type_wrapper">
                                            <div class="col-lg-3 o_form_label">Icon Type</div>
                                                <div class="col-lg-9">
                                                    <field name="aioa_icon_type" widget="radio" options="{'horizontal': True}"/>
                                                </div>
                                            </div>


                                            
                                            <!-- Enable Icon Custom Size -->
                                            <div class="row mt16">
                                                <label for="aioa_custom_icon_size" class="col-lg-3 o_form_label">Enable Icon Custom Size</label>
                                                <div class="col-lg-9">
                                                    <field name="aioa_custom_icon_size"/>
                                                </div>
                                            </div>

                                            <div class="row mt16" invisible="aioa_custom_icon_size">
                                                <label  name='aioa_icon_size_desktop' string="Icon size for Desktop" for = "aioa_icon_size_desktop" class="col-lg-3 o_light_label fw-bold"/>
                                                <field name="aioa_icon_size_desktop"  class="aioa_icon_type_wrapper"  widget="radio" options="{'horizontal': true}" />
                                            </div>
                                            
                                            <div class="row mt16" invisible="not aioa_custom_icon_size">
                                                <label for="aioa_custom_icon_size_px" class="col-lg-3 o_form_label">Select exact icon size (PX):</label>
                                                <div class="col-lg-3">
                                                    <field name="aioa_custom_icon_size_px"/>
                                                    <p class="text-muted">20 - 150px are permitted values</p>
                                                </div>
                                            </div>

                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
